<p id="notice"><%= notice %></p>

<h1>Mood Dictionary</h1>
<div class="container">
  <div class="row">
    <div class="s12 m4 l8">
      <%
    </div>
  </div>
<div class="row">
  <% @photos.each do |pic| %>
    <div class="col s12 m6 l3">
          <div class="card">
            <div class="card-image">
              <img src="<%= pic.url %>">
              <span class="card-title"><%= pic.name %></span>
            </div>
            <div class="card-content">
              <p>This is where related pic info will go</p>
            </div>
            <div class="card-action">
              <a href="#">I Feel Like This</a>
            </div>
          </div>
        </div>
    <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th><%= link_to 'New Photo', new_photo_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
    <tr>
        <td><%= photo.name %></td>
        <td><%= photo.url %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


